@model ProductUpdateVm

<div class="container">
    <div class="row">
        <div class="col-md-6">

            <form method="post" asp-area="Admin" asp-controller="Product" asp-action="Update">

                <div class="form-group">
                    <label>Name</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label>Price</label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label>Description</label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label>Category</label>
                    <select asp-for="CategoryId" class="form-control">

                        @foreach (Category category in ViewBag.Categories)
                        {
                            <option value="@category.Id">
                                @category.Name
                            </option>
                        }
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label>Tags</label>
                    <select asp-for="TagIds" class="form-control" multiple="multiple">

                        @foreach (Tag tag in ViewBag.Tags)
                        {
                            <option value="@tag.Id">
                                @tag.Name
                            </option>
                        }
                    </select>
                    <span asp-validation-for="TagIds" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label>SKU</label>
                    <input asp-for="SKU" class="form-control" />
                    <span asp-validation-for="SKU" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label>Main Image URL</label>
                    <input asp-for="MainImage" class="form-control" />
                    <span asp-validation-for="MainImage" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label>Hover Image URL</label>
                    <input asp-for="HoverImage" class="form-control" />
                    <span asp-validation-for="HoverImage" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary mt-3">
                    Update Product
                </button>

            </form>

        </div>
    </div>
</div>
