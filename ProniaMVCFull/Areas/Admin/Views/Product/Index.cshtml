@model List<Product>

<div class="container">
    <div class="row">

        <div class="row">
            <a class="btn btn-success col-2" asp-action="Create">Create +</a>
        </div>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Name</th>
                    <th scope="col">MainImage</th>
                    <th scope="col">HoverImage</th>
                    <th scope="col">Price</th>
                    <th scope="col">Category</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>

                @foreach (Product product in Model)
                {
                    <tr>
                        <th scope="row">@product.Id</th>
                        <td>@product.Name</td>
                        <td><img src="~/assets//images/website-images/@product.MainImgUrl" width="30" height="30" alt="Alternate Text" /></td>
                        <td><img src="~/assets//images/website-images/@product.HoverImgUrl" width="30" height="30" alt="Alternate Text" /></td>
                        <td>@product.Price</td>
                        <td>@product.Category.Name</td>
                        <td>
                            <a class="btn btn-warning" asp-action="Update" asp-route-id="@product.Id">Update</a>
                            <a asp-action="Delete" asp-route-id="@product.Id" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>